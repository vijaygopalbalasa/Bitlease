# Environment Configuration for BTC Oracle
# Copy this file to .env and fill in your values

# Private key for deploying contracts and updating prices
PRIVATE_KEY=your_private_key_here

# RPC URL for Core testnet
RPC_URL=https://rpc.test2.btcs.network

# Deployed contract addresses (filled after deployment)
AGGREGATOR_ADDRESS=
CONSUMER_ADDRESS=

# Oracle configuration
DECIMALS=8
MAX_AGE=3600

# Update interval in seconds (default: 5 minutes)
UPDATE_INTERVAL=300

# CoinGecko API configuration
COINGECKO_API_URL=https://api.coingecko.com/api/v3/simple/price?ids=bitcoin&vs_currencies=usd